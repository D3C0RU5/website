    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "next": "latest",
    "nookies": "^2.5.2",
    "polished": "^4.1.3",
    "react": "^18.3.1",
